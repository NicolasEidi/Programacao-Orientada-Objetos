package exercicio;

public class Circulo extends FormaGeometrica{
	static double PI = 3.14; 
	private int raio;
	
	public Circulo(int raio) {
		this.raio = raio;
	}

	@Override
	public double calcularArea() {
		return (PI * (this.raio * this.raio));
	}
	
	@Override
	public double calcularPerimetro() {
		return (2 * PI * this.raio);
	}
}
